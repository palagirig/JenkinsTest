<aura:component >
	<ltng:require styles=" 	/resource/f42_BootstrapPack/f42_BootstrapPack/f42-bootstrap/css/f42-bootstrap.css"

                   	scripts="	/resource/f42_BootstrapPack/f42_BootstrapPack/f42-jquery/jquery.min.js">
    </ltng:require>

    <aura:attribute name="oppPipeDetail" type="Object" required="true" access="public"/>
    <aura:attribute name="somLikelihoods" type="Ven_SomLikelihood__c[]" required="true" access="public"/>
    <aura:attribute name="isNewOpp" type="Boolean" required="true" access="public"/>
    <aura:attribute name="selectOptLsts" type="Object" required="true" access="public"/>
    <aura:attribute name="countryInternational" type="Object" access="public" />
    <aura:attribute name="userRoles" type="Object" access="public" />

    <aura:attribute name="setProbability" type="Boolean" access="global"/>

    <aura:attribute name="austriaRole" type="String" access="public" />
    <aura:attribute name="switzerlandRole" type="String" access="public" />

    <aura:attribute name="isIm" type="Boolean" default="false" access="public"/>
    <aura:attribute name="isScout" type="Boolean" default="false" access="public"/>
    <aura:attribute name="isAnalyst" type="Boolean" default="false" access="public"/>


    <aura:attribute name="oppValid" type="Boolean" required="true" access="public"/>
    <aura:attribute name="pipeValid" type="Boolean" required="true" access="public"/>
    <aura:attribute name="approvalValid" type="Boolean" required="true" access="public"/>


    <aura:attribute name="effYieldValid" type="Boolean" default="true" access="public"/>

	  <aura:attribute name="f42_value" type="Boolean" default="false" />

    <aura:attribute name="statusString" type="String" access="private" />

	  <aura:method name="checkValidDetailCmp" action="{!c.checkValid}" description="check if cmp is valid" />

    <div class="f42">
	    <div class="panel panel-default panel-custom">
			<div class="panel-heading panel-heading-custom"><b>{!$Label.c.Ven_lbl_Opp}</b></div>

      <!--*************************
      *     Opportunity Fields
      ***************************-->
			<div class="panel-body">
				<c:Ven_OppPipeDetailOppCmp opp="{!v.oppPipeDetail.opp}"
					selectOptLsts="{!v.selectOptLsts}"
					countryInternational="{!v.countryInternational}"
					userRoles="{!v.userRoles}"
					austriaRole="{!v.austriaRole}"
					switzerlandRole="{!v.switzerlandRole}"
					isValid="{!v.oppValid}"
					isIm="{!v.isIm}"
					isScout="{!v.isScout}"
					isAnalyst="{!v.isAnalyst}"
					isNewOpp="{!v.isNewOpp}"
          setProbability="{!v.setProbability}"
          effYieldValid="{!v.effYieldValid}"
          statusString="{!v.statusString}"
          aura:id="detailOppCmp">
				</c:Ven_OppPipeDetailOppCmp>
			</div>
		</div>

    <!--*************************
    *     Pipeline Objects
    ***************************-->
		<div class="panel panel-default panel-custom">
			<div class="panel-heading panel-heading-custom"><b>{!$Label.c.Ven_lbl_Pipeline}</b></div>

			<div class="panel-body">
				<c:Ven_OppPipeDetailPipeCmp oppPipeDetail="{!v.oppPipeDetail}"
					isValid="{!v.pipeValid}"
					somLikelihoods="{!v.somLikelihoods}"
					effYieldValid="{!v.effYieldValid}"
					aura:id="detailPipeCmp">
				</c:Ven_OppPipeDetailPipeCmp>
			</div>
		</div>

    <!--*************************
    *     Approval Fields
    ***************************-->
		<c:Ven_OppPipeDetailApprovalCmp approval="{!v.oppPipeDetail.approval}"
      opp="{!v.oppPipeDetail.opp}"
      isValid="{!v.approvalValid}"
      statusString="{!v.statusString}"
      selectOptLsts="{!v.selectOptLsts}"
      aura:id="detailApprovalCmp"
    />


	</div>
</aura:component>